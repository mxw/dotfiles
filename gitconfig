[user]
  name = Max Wang
  email = mxawng@gmail.com

[alias]
  a = add
  aa = add -A
  base = merge-base HEAD origin/master
  br = branch
  cm = commit
  ci = commit -a
  ca = commit --amend
  caa = commit -a --amend
  co = checkout
  cp = cherry-pick
  d = diff
  dc = diff --cached
  dw = diff --ignore-space-change
  drop = stash drop
  fork = "!f() { git checkout -b $1; }; f"
  fixup = "!f() { git -c core.editor=true rebase -q -i $1 --exec \
           'git reset --soft -q HEAD^; git caa --no-edit -q'; }; f"
  heave = "!git submodule foreach 'git co master && git up'"
  l = log
  list = stash list
  mkbr = "!f() { git checkout -b $1 origin/master; }; f"
  mvbr = branch -m
  peek = show stash@{0}
  pop = stash pop
  s = status
  stow = stash --keep-index
  sw = show --ignore-space-change
  sup = "!git stash && git pull --rebase && git stash pop"
  rmbr = branch -D
  up = pull --rebase
  w = whatchanged --pretty=short

[color]
  diff = auto
  branch = auto
  status = auto
  interactive = auto
  ui = auto
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = blue
  frag = cyan
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = red

[core]
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore

[advice]
  statusHints = false
[apply]
  whitespace = fix
[branch]
  autosetupmerge = true
[diff]
  renames = copies
  mnemonicprefix = true
[log]
  date = local
[merge]
  stat = true
[push]
  default = upstream
[rerere]
  enabled = true

[include]
  path = ~/.gitoverride
